mkdir -pv $DST_DIR/$PKG_LONG_NAME/opt/lfs
mv $DST_DIR/$PKG_LONG_NAME/lib/udev $DST_DIR/$PKG_LONG_NAME/opt/lfs
rm -rv $DST_DIR/$PKG_LONG_NAME/lib
