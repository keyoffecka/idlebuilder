install -m755 -d $DST_DIR/$PKG_LONG_NAME/$PREFIX/{bin,lib$LIB_SUFFIX,include/gsm,share/man/man{1,3}}

make INSTALL_ROOT="$DST_DIR/$PKG_LONG_NAME/$PREFIX" \
    GSM_INSTALL_LIB="$DST_DIR/$PKG_LONG_NAME/$PREFIX/lib$LIB_SUFFIX" \
    GSM_INSTALL_INC="$DST_DIR/$PKG_LONG_NAME/$PREFIX/include/gsm" \
    GSM_INSTALL_MAN="$DST_DIR/$PKG_LONG_NAME/$PREFIX/share/man/man3" \
    TOAST_INSTALL_MAN="$DST_DIR/$PKG_LONG_NAME/$PREFIX/share/man/man1" \
    LFLAGS="$DEFAULT_LDFLAGS" \
    install
